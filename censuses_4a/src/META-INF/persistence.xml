<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="censuses">
		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />

			<!-- Con el valor "update" se crea la nueva base de datos en el caso de 
				que no hubiera y se actualiza en el caso de que ya exista una base de datos -->
			<property name="hibernate.hbm2ddl.auto" value="update" />

			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />

		</properties>
	</persistence-unit>

</persistence>